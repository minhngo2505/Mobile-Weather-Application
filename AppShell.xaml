<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiApp1.Pages"
    Title="Weather App">

    <!--tab bar -->
    <TabBar>
        <ShellContent 
            Title="Home"
            Icon="home.jpg"
            ContentTemplate="{DataTemplate pages:Mainpage}" />

        <ShellContent 
            Title="Favourites"
            Icon="star.jpg"
            ContentTemplate="{DataTemplate pages:favouratepage}" />

        <ShellContent 
            Title="Settings"
            Icon="setting.jpg"
            ContentTemplate="{DataTemplate pages:Settingpage}" />
    </TabBar>

</Shell>
